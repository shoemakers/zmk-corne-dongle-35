
#define ZMK_POINTING_DEFAULT_MOVE_VAL 1200  // 600
#define ZMK_POINTING_DEFAULT_SCRL_VAL 25   // 10

#include <input/processors.dtsi>
#include <zephyr/dt-bindings/input/input-event-codes.h>
#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/outputs.h>
#include <dt-bindings/zmk/pointing.h>
#include <dt-bindings/zmk/rgb.h>
#include "zmk-helpers/key-labels/eyelash42.h"

#define DEFAULT   0
#define NAV       1
#define MOUSE     2
#define NUM       3
#define FUN       4

#define KEYS_L LT0 LT1 LT2 LT3 LT4 LM0 LM1 LM2 LM3 LM4 LB0 LB1 LB2 LB3 LB4
#define KEYS_R RT0 RT1 RT2 RT3 RT4 RM0 RM1 RM2 RM3 RM4 RB0 RB1 RB2 RB3 RB4
#define THUMBS LH2 LH1 LH0 RH0 RH1 RH2

#define MOUSE_KEEP_ALIVE_INS LM4 LM3 LM2 LM1 LM0 LT4 LT3 LT2 LT1 LT0 RT0 RM1 RM2 RM3 RM4 RB1 RB2 RB3 RB4 RH0 RH1 RH2
#define MUM_KEEP_ALIVE_INS KEYS_L THUMBS RT1 RM1 RM2 RM3 RM4 RB1 RB2 RB3 RB4

&mmv_input_listener { input-processors = <&zip_xy_scaler 2 1>; };

&msc_input_listener { input-processors = <&zip_scroll_scaler 2 1>; };

&msc {
    acceleration-exponent = <1>;      // 0
    time-to-max-speed-ms = <100>;       // 300
    delay-ms = <0>;                   // 0
};

&mmv {
    time-to-max-speed-ms = <500>;
    acceleration-exponent = <1>;
    trigger-period-ms = <16>;
    delay-ms = <0>;                   // 0
};

/ {
    behaviors {
        caps_word: caps_word {
            compatible = "zmk,behavior-caps-word";
            #binding-cells = <0>;
            continue-list = <BACKSPACE DELETE UNDERSCORE MINUS>; // 遇到这些键不停止大写
        };
        
        // 窗口切换神器
        swapper: swapper {
            compatible = "zmk,behavior-tri-state";
            #binding-cells = <0>;
            // 意思是：开始时按住 Alt，中间过程按 Tab，结束时松开 Alt
            bindings = <&kt LALT>, <&kp TAB>, <&kt LALT>;
            // 1000 毫秒（1秒）没动作就自动确认切换
            timeout-ms = <500>;
            // 关键：把你的导航键索引填在这里
            // 这样当你按这些键时，Swapper 会保持 Alt 按下状态
            ignored-key-positions = <LT2 RT2 LH1 RM1 RM4>;
        };
        // 这里的 smart_mouse 对应你原有的宏定义
        smart_mouse: smart_mouse {
            compatible = "zmk,behavior-tri-state";
            #binding-cells = <0>;
            // 行为定义：[开始时执行], [中间执行], [结束时执行]
            bindings = <&tog MOUSE>, <&none>, <&tog MOUSE>;
            // 1500毫秒无动作自动退出
            timeout-ms = <1500>;
            // 在哪些层下不进行超时计时（通常包含鼠标层本身）
            // 这里的 MOUSE, NAV 等需要对应你的层索引数字
            ignored-layers = <1 2>;
            // 哪些按键按下后会重置计时器，不导致层退出
            // 这里的 MOUSE_KEEP_ALIVE_INS 是你在上面定义的物理索引宏
            ignored-key-positions = <MOUSE_KEEP_ALIVE_INS>;
        };
        smart_num: smart_num {
            compatible = "zmk,behavior-tri-state";
            #binding-cells = <0>;
            // 开始：开启 NUM 层 | 中间：无动作 | 结束：关闭 NUM 层
            bindings = <&tog NUM>, <&none>, <&tog NUM>;
            
            // 数字层通常不需要太短的超时，甚至可以设长一点
            // 让我们主要依靠“按键动作”来退出
            timeout-ms = <2000>; 
            
            // 关键：包含 NUM 层本身 (3)
            ignored-layers = <NUM>;
            
            // 关键：这里填入所有“属于数字层”的按键索引
            // 只要按这些键，数字层就不会关闭。
            // 必须包含：R(4) 和 U(8) 这两个 Combo 触发键！
            ignored-key-positions = <MUM_KEEP_ALIVE_INS>; 
        };
        hml: hml {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            bindings = <&kp>, <&kp>;
            flavor = "tap-preferred";
            tapping-term-ms = <280>;
            quick-tap-ms = <200>;                // 快速连打不触发长按
            require-prior-idle-ms = <150>;       // 关键：只有停顿后的按压才判定为修饰键
            hold-trigger-key-positions = <KEYS_R THUMBS>; // 交叉触发：左手修饰键只对右手生效
            hold-trigger-on-release;
        };

        hmr: hmr {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            bindings = <&kp>, <&kp>;
            flavor = "tap-preferred";
            tapping-term-ms = <280>;
            quick-tap-ms = <200>;
            require-prior-idle-ms = <150>;
            hold-trigger-key-positions = <KEYS_L THUMBS>;
            hold-trigger-on-release;
        };
        // 1. 简化的快速粘滞键：只负责点按粘滞，不处理双击锁定
        skq: sticky_key_quick {
            compatible = "zmk,behavior-sticky-key";
            #binding-cells = <1>;
            bindings = <&kp>;
            release-after-ms = <1000>;
            quick-release;
            ignore-modifiers; // 核心：忽略修饰键干扰，避开系统连击判定
        };
    };

    rgb_encoder: rgb_encoder {
        compatible = "zmk,behavior-sensor-rotate";
        #sensor-binding-cells = <0>;
        bindings = <&rgb_ug RGB_BRI>, <&rgb_ug RGB_BRD>;
    };

    scroll_encoder: scroll_encoder {
        compatible = "zmk,behavior-sensor-rotate";
        #sensor-binding-cells = <0>;
        bindings = <&msc SCRL_DOWN>, <&msc SCRL_UP>;

        tap-ms = <100>;
    };

    conditional_layers { compatible = "zmk,conditional-layers"; };
    combos {
        compatible = "zmk,combos";

        // --- 1. 功能类 (横向) ---
        combo_esc {
            timeout-ms = <30>;
            require-prior-idle-ms = <150>;
            key-positions = <LT2 LT3>; // W + E
            bindings = <&kp ESC>;
        };

        combo_tab {
            timeout-ms = <30>;
            require-prior-idle-ms = <150>;
            key-positions = <LT1 LT2>; // Q + W
            bindings = <&kp TAB>;
        };

        combo_enter {
            timeout-ms = <30>;
            require-prior-idle-ms = <150>;
            key-positions = <RM2 RM3>; // K + L (回车位置最顺手)
            bindings = <&kp RET>;
        };

        combo_bspc {
            timeout-ms = <30>;
            require-prior-idle-ms = <150>;
            key-positions = <RT2 RT3>; // I + O
            bindings = <&kp BSPC>;
        };

        // --- 2. 括号与符号类 (主行/下排对称优化) ---
        // 圆括号 ( ) -> 食指+中指 (最常用，放最舒服的位置)
        combo_lpar {
            timeout-ms = <30>;
            require-prior-idle-ms = <150>;
            key-positions = <LM3 LM4>; // D + F
            bindings = <&kp LPAR>; 
        };
        combo_rpar {
            timeout-ms = <30>;
            require-prior-idle-ms = <150>;
            key-positions = <RM3 RM4>; // J + K
            bindings = <&kp RPAR>; 
        };

        // 中括号 [ ] -> 向外挪一格，避开 Enter
        combo_lbkt {
            timeout-ms = <30>;
            require-prior-idle-ms = <150>;
            key-positions = <LM2 LM3>; // S + D
            bindings = <&kp LBKT>; 
        };
        combo_rbkt {
            timeout-ms = <30>;
            require-prior-idle-ms = <150>;
            key-positions = <RM1 RM2>; // L + ; (避开了 K+L 的 Enter)
            bindings = <&kp RBKT>; 
        };

        // 大括号 { } -> 下排对称
        combo_lbrc {
            timeout-ms = <30>;
            require-prior-idle-ms = <150>;
            key-positions = <LB2 LB3>; // X + C
            bindings = <&kp LBRC>; 
        };
        combo_rbrc {
            timeout-ms = <30>;
            require-prior-idle-ms = <150>;
            key-positions = <RB1 RB2>; // . + /
            bindings = <&kp RBRC>; 
        };

        // --- 3. 智能模式与高级功能 ---
        combo_smart_mouse {
            timeout-ms = <40>;
            key-positions = <LT0 RT0>; // T + Y
            bindings = <&smart_mouse>;
            layers = <0>;
        };

        combo_smart_num {
            timeout-ms = <40>;
            key-positions = <LT1 RT1>; // R + U
            bindings = <&smart_num>;
            layers = <0>;
        };

        combo_swapper {
            timeout-ms = <30>;
            require-prior-idle-ms = <150>;
            key-positions = <LT2 RT2>; 
            bindings = <&swapper>;
        };

        combo_caps_word {
            timeout-ms = <30>;
            key-positions = <LM2 LM3 LM4>; // S + D + F
            bindings = <&caps_word>;
        };

    };

    keymap {
        compatible = "zmk,keymap";

        default {
            display-name = "DEFAULT";
            bindings = <
&none  &kp Q        &kp W        &kp E         &kp R          &kp T                                   &mmv MOVE_UP                     &kp Y        &kp U            &kp I         &kp O        &kp P           &none
&none  &hml LWIN A  &hml LALT S  &hml LCTRL D  &hml LSHIFT F  &kp G                   &mmv MOVE_LEFT  &mkp LCLK       &mmv MOVE_RIGHT  &kp H        &hmr RSHIFT J    &hmr RCTRL K  &hmr RALT L  &hmr RWIN SEMI  &none
&none  &kp Z        &kp X        &kp C         &kp V          &kp B      &kp SPACE                    &mmv MOVE_DOWN                   &kp N        &kp M            &kp COMMA     &kp DOT      &kp FSLH        &none
                                 &lt 4 ESC     &lt 1 SPACE    &lt 2 TAB                                                                &lt 4 ENTER  &lt 3 BACKSPACE  &skq RSHIFT
            >;

            sensor-bindings = <&scroll_encoder>;
        };

        Nav {
            display-name = "Nav";
            bindings = <
&none  &kp LC(Z)     &kp LC(X)  &kp LC(C)    &kp LC(V)      &kp LC(LS(Z))                                &mmv MOVE_UP                     &none      &none          &none               &none          &none      &none
&none  &kp LEFT_WIN  &kp LALT   &kp LCTRL    &kp LSHIFT     &kp DEL                      &mmv MOVE_LEFT  &mkp LCLK       &mmv MOVE_RIGHT  &kp INS    &kp LEFT       &kp DOWN            &kp UP         &kp RIGHT  &none
&none  &kp LC(A)     &kp LG(D)  &kp LA(TAB)  &kp LC(LA(A))  &none          &kp C_MUTE                    &mmv MOVE_DOWN                   &kp CLCK   &kp HOME       &kp PAGE_DOWN       &kp PG_UP     &kp END    &none
                                &none        &none          &none                                                                         &kp ENTER  &kp BACKSPACE  &kp RSHIFT
            >;

            sensor-bindings = <&scroll_encoder>;
        };

        mouse {
            display-name = "MOUSE";
            bindings = <
&none  &kp ESC   &mkp MB4  &mkp MCLK  &mkp MB5    &none                                  &mmv MOVE_UP                     &none      &none           &none           &none         &none            &none
&none  &kp LWIN  &kp LALT  &kp LCTRL  &kp LSHIFT  &kp DEL                &mmv MOVE_LEFT  &mkp LCLK       &mmv MOVE_RIGHT  &none      &mmv MOVE_LEFT  &mmv MOVE_DOWN  &mmv MOVE_UP  &mmv MOVE_RIGHT  &none
&none  &none     &none     &none      &none       &none    &kp C_MUTE                    &mmv MOVE_DOWN                   &none      &msc SCRL_LEFT  &msc SCRL_DOWN  &msc SCRL_UP  &msc SCRL_RIGHT  &none
                           &none      &none       &none                                                                   &mkp LCLK  &mkp RCLK       &mkp MCLK
            >;

            sensor-bindings = <&scroll_encoder>;
            label = "mouse";
        };

        Num {
            bindings = <
&trans  &kp LEFT_BRACKET  &kp N7  &kp N8   &kp N9  &kp RIGHT_BRACKET                    &trans          &none   &none       &none      &none     &none     &trans
&trans  &kp SQT           &kp N4  &kp N5   &kp N6  &kp EQUAL                    &trans  &trans  &trans  &none   &kp RSHIFT  &kp RCTRL  &kp RALT  &kp RWIN  &trans
&trans  &kp GRAVE         &kp N1  &kp N2   &kp N3  &kp BSLH           &trans            &trans          &none   &kp SEMI    &kp COMMA  &kp DOT   &kp FSLH  &trans
                                  &kp DOT  &kp N0  &kp MINUS                                            &trans  &trans      &trans
            >;

            sensor-bindings = <&scroll_encoder>;
            label = "num";
        };

        Fun {
            bindings = <
&trans  &kp F10  &kp F7  &kp F8  &kp F9     &bt BT_SEL 0                    &trans          &bt BT_SEL 2  &out OUT_TOG  &none      &none     &bt BT_CLR_ALL  &trans
&trans  &kp F11  &kp F4  &kp F5  &kp F6     &bt BT_SEL 1            &trans  &trans  &trans  &bt BT_SEL 3  &kp RSHIFT    &kp RCTRL  &kp RALT  &kp RWIN        &trans
&trans  &kp F12  &kp F1  &kp F2  &kp F3     &bt BT_CLR    &trans            &trans          &bt BT_SEL 4  &none         &none      &none     &none           &trans
                         &none   &kp SPACE  &kp TAB                                         &trans        &trans        &trans
            >;

            sensor-bindings = <&scroll_encoder>;
            label = "Fun";
        };
    };
};
